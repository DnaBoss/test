{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2016",
            "es2017",
            "es6",
            "es7"
        ],
        "sourceMap": false,
        "types": [ "node" ],
        "typeRoots": [
            "node_modules/@types/"
        ],
        "esModuleInterop": true, 
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "declaration": false,
        "watch": false
    },
    "compileOnSave": false,
    "exclude": [
        ".vscode",
        "node_modules",
        "dist"
    ]
}